<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Multi Browser Test" parallel="tests">
	<test thread-count="5" name="ChromeTest">
		<parameter name="browser" value="chrome"></parameter>

		<classes>

			<class name="testscript.LoginTestclass">
				<methods>
					<include
						name="verifywhetheruserisabletoenterusingvalidcredentials"></include>
					<include name="verifyuserabletoenterusinginvalidcredentials"></include>
					<include
						name="verifyuserabletoenterusingvalidusernameandinvalidpassword"></include>
					<include
						name="verifyuserabletoenterusinginvalidusernameandvalidpassword"></include>
				</methods>
			</class>
			<class name="testscript.ManageNewsTestclass">
				<methods>
					<include name="verifuserabletopublishmessage"></include>
					<include name="verifylogoutbutton"></include>

				</methods>
			</class>
			<class name="testscript.ManageCategoryTest">
				<methods>
					<include name="verifyuserabletomanagecategorysuccessfully"></include>

				</methods>
			</class>
			<class name="testscript.ManageContactTest">
				<methods>
					<include name="verifyusercanupdatecontactinformation"></include>

				</methods>
			</class>
			<class name="testscript.ManageFooterTest">
				<methods>
					<include name="verifyuserabletomanagefootertext"></include>

				</methods>
			</class>

			<class name="testscript.LogOutTest">
				<methods>
					<include name="verifyUserIsAbleToLogout"></include>

				</methods>
			</class>
		</classes>
	</test> <!--
		
	Test -->
